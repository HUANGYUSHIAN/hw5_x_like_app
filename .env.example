# =========================
# Database
# =========================
# MongoDB 連線字串範例
DATABASE_URL="mongodb+srv://<username>:<password>@<cluster-url>/<database>?retryWrites=true&w=majority&serverSelectionTimeoutMS=10000&connectTimeoutMS=10000"

# =========================
# OAuth Provider Settings
# =========================
# Google OAuth
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# GitHub OAuth
GITHUB_CLIENT_ID="your_github_client_id_here"
GITHUB_CLIENT_SECRET="your_github_client_secret_here"

# =========================
# NextAuth / App URL
# =========================
# 本地開發使用 http://localhost:3000，部署到 Vercel 時修改為 Vercel URL
NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET 隨機生成，local 可用 node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET="your_nextauth_secret_here"

# =========================
# Pusher (WebSocket) Settings
# =========================
NEXT_PUBLIC_PUSHER_APP_ID="your_pusher_app_id_here"
NEXT_PUBLIC_PUSHER_KEY="your_pusher_key_here"
PUSHER_SECRET="your_pusher_secret_here"
NEXT_PUBLIC_PUSHER_CLUSTER="your_pusher_cluster_here"

# =========================
# Vercel Deployment Flag
# =========================
VERCEL=1